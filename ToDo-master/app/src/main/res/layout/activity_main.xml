<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- First EditText for the first number input -->

    <!-- Second EditText for the second number input -->

    <!-- EditText for displaying the result -->

    <!-- Button to trigger the calculation -->

    <EditText
        android:id="@+id/rt"
        android:layout_width="376dp"
        android:layout_height="78dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:focusable="false"
        android:hint="RÃ©sultat"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/v2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/v2"
        app:layout_constraintTop_toBottomOf="@id/v2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/v2"
        android:layout_width="376dp"
        android:layout_height="79dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Entrez un autre nombre"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/v1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/v1"
        app:layout_constraintTop_toBottomOf="@id/v1" />


    <EditText
        android:id="@+id/v1"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="Entrez un nombre"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="102dp"
        android:layout_height="55dp"
        android:layout_marginTop="108dp"
        android:text="Calculer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rt"
        app:layout_constraintVertical_bias="0.006" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="102dp"
        android:layout_height="55dp"
        android:layout_marginTop="108dp"
        android:text="Supp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rt"
        app:layout_constraintVertical_bias="0.006" />

</androidx.constraintlayout.widget.ConstraintLayout>
